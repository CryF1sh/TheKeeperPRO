@{
    Layout = "_DefaultView";
}
<head>
    <meta charset="UTF-8">
    <style>
        .parent {
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            overflow: auto;
        }

        .block {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        td{
            height: 250px;
            width: 250px;
        }

        .block1 {
            margin: 0 auto;
            height: 250px;
            border-radius: 15px;
            background: #909090;
        }

        img{
            padding-left: 25px;
            padding-right: 25px;
        }

        label{
            text-align: center;
            width: 250px;
            height: 15px;
            display: block;        
        }
    </style>
</head>
<body>
    <header> </header>
    <div class="parent">
        <div class="block">
            <table cellpadding="10"> 
                <tr>
					<td>
                        <div class="block1" onclick="location.href = '../ViewRequest/NewRequest'">
                            <img src="/images/pngegg2.png" height="200"/>
                            <label>Одиночная заявка</label>
                        </div>
                    </td>
                    <td>
                        <div class="block1" onclick="location.href = '../ViewRequest/NewGroupRequest'">
                            <img src="/images/pngegg.png" height="200"/>
                            <label>Групповая заявка</label>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
