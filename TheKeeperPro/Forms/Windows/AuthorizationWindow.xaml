<Window x:Class="TheKeeperPro.Forms.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheKeeperPro.Forms.Windows"
        mc:Ignorable="d"
        Title="Вход в систему поиска п...." Height="450" Width="500" WindowStartupLocation="CenterScreen" Style="{StaticResource winStyleAuthorization}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="186*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnKiriill" Style="{StaticResource btnKirill}" Click="btnKiriill_Click" Grid.RowSpan="4"/>
        <TextBlock Text="Введите код сотрудника для входа" Grid.Row="1" Style="{StaticResource tblStyleVhod}" Height="27" Margin="0,10,0,0" Width="342"/>
        <PasswordBox x:Name="passbxEmployeeCode" Grid.Row="2" Style="{StaticResource passbxSytleVhod}" Height="25" Width="250"/>
        <Button x:Name="btnEnter" Content="Вломиться" Grid.Row="3" Style="{StaticResource btnStyleVhod}" Click="btnEnter_Click" Width="200" Height="30" Margin="0,20,0,0"/>        
    </Grid>
</Window>
